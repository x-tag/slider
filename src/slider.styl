@import 'mixins'
@import 'params'

x-slider {

    display: inline-block;
    position: relative;
    margin: 0;
    padding: 0;

    & > input {
        margin: 0;
        padding: 0;
        position: relative;
        overflow: hidden;
        vertical-align: middle;

        width: 100%;
        min-height: 100%;
    }

    .slider-track {
        position: absolute;
        display: block;
        left: 0;
        right: 0;
        bottom: 0;
        top: 0;
        width: 100%;
        height: 4px;
        margin: auto;
        pointer-events: none;
    }

    .slider-thumb {
        cursor: default;
        unhighlightable();
        vertical-align: middle;
        position: absolute !important;
        top: 0;
        left: 0;
        width: 32px;
        height: 32px;
        margin: 0;
        padding: 0;
    }

    &[polyfill] {
        cursor: default;
        unhighlightable();

        & > input {
            cursor: default;
            unhighlightable();
            display: block;
            position: relative;

            &::-webkit-slider-thumb{
                visibility: hidden;
            }

            &::-moz-range-thumb{
                width: 0px;
                height: 0px;
            }

            &::-moz-range-track{
                height: 0;
                width: 0;
            }
        }
    }

    &:not([polyfill]){
        & > .slider-thumb {
            visibility: hidden !important;
        }
    }
}

